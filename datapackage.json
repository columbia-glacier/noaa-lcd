{
  "name": "noaa-lcd",
  "title": "NOAA Local Climatological Data (LCD)",
  "description": "Meteorological observations from nearby airport weather stations.",
  "version": "0.1.0",
  "contributors": [
    {
      "title": "Ethan Welty",
      "email": "ethan.welty@gmail.com",
      "role": "author"
    }
  ],
  "sources": [
    {
      "title": "NOAA Data Tools: Local Climatological Data (LCD)",
      "author": "https://www.ncdc.noaa.gov/cdo-web/datatools/lcd"
    }
  ],
  "resources": [
    {
      "name": "stations",
      "title": "Station Metadata",
      "path": "data/stations.csv",
      "schema": {
        "fields": [
          {
            "name": "id",
            "type": "string",
            "description": "Station identifier"
          },
          {
            "name": "name",
            "type": "string",
            "description": "Station name"
          },
          {
            "name": "longitude",
            "type": "number",
            "description": "Longitude (unknown datum)",
            "unit": "°"
          },
          {
            "name": "latitude",
            "type": "number",
            "description": "Latitude (unknown datum)",
            "unit": "°"
          },
          {
            "name": "elevation",
            "type": "number",
            "description": "Elevation above sea level (unknown datum)",
            "unit": "m"
          }
        ]
      }
    },
    {
      "name": "WBAN26442",
      "title": "Valdez Weather Service Office (WBAN:26442)",
      "path": "data/WBAN26442.csv",
      "schema": {
        "fields": [
          {
            "name": "t",
            "type": "datetime",
            "description": "Date and time (UTC)",
            "format": "%Y-%m-%dT%H:%M:%SZ"
          },
          {
            "name": "air_temperature",
            "type": "number",
            "description": "Air temperature",
            "unit": "°C"
          },
          {
            "name": "dew_point",
            "type": "number",
            "description": "Dew point temperature",
            "unit": "°C"
          },
          {
            "name": "relative_humidity",
            "type": "integer",
            "description": "Relative humidity",
            "unit": "%"
          },
          {
            "name": "wind_speed",
            "type": "number",
            "description": "Wind speed",
            "unit": "m s-1"
          },
          {
            "name": "wind_direction",
            "type": "number",
            "description": "Wind direction (direction of travel counterclockwise from east)",
            "unit": "rad"
          },
          {
            "name": "air_pressure",
            "type": "number",
            "description": "Atmospheric pressure",
            "unit": "Pa"
          },
          {
            "name": "precipitation",
            "type": "number",
            "description": "Total precipitation over the past hour",
            "unit": "m"
          }
        ]
      }
    },
    {
      "name": "WBAN26479",
      "title": "Valdez Municipal Airport (WBAN:26479)",
      "path": "data/WBAN26479.csv",
      "schema": {
        "fields": [
          {
            "name": "t",
            "type": "datetime",
            "description": "Date and time (UTC)",
            "format": "%Y-%m-%dT%H:%M:%SZ"
          },
          {
            "name": "air_temperature",
            "type": "number",
            "description": "Air temperature",
            "unit": "°C"
          },
          {
            "name": "dew_point",
            "type": "number",
            "description": "Dew point temperature",
            "unit": "°C"
          },
          {
            "name": "relative_humidity",
            "type": "integer",
            "description": "Relative humidity",
            "unit": "%"
          },
          {
            "name": "wind_speed",
            "type": "number",
            "description": "Wind speed",
            "unit": "m s-1"
          },
          {
            "name": "wind_direction",
            "type": "number",
            "description": "Wind direction (direction of travel counterclockwise from east)",
            "unit": "rad"
          },
          {
            "name": "air_pressure",
            "type": "number",
            "description": "Atmospheric pressure",
            "unit": "Pa"
          },
          {
            "name": "precipitation",
            "type": "number",
            "description": "Total precipitation over the past hour",
            "unit": "m"
          }
        ]
      }
    }
  ]
}
